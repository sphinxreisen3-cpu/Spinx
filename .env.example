# =============================================================================
# ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local for local development.
# In Railway, set these variables in the service settings.
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE (REQUIRED)
# -----------------------------------------------------------------------------
# MongoDB connection string - REQUIRED for the app to function
# Railway: Set this in Railway service variables
MONGODB_URI=mongodb://localhost:27017/sphinx-reisen
MONGODB_DB_NAME=sphinx-reisen

# -----------------------------------------------------------------------------
# AUTHENTICATION (REQUIRED)
# -----------------------------------------------------------------------------
# JWT secret for admin authentication
# Generate with: openssl rand -base64 32
# Railway: MUST be set in Railway service variables
NEXTAUTH_SECRET=your-secret-key-here

# The canonical URL of the application
# Railway: Automatically provided as RAILWAY_PUBLIC_DOMAIN
NEXTAUTH_URL=http://localhost:3000

# Admin password for first-time setup
ADMIN_PASSWORD=change-this-password

# -----------------------------------------------------------------------------
# APPLICATION (RECOMMENDED)
# -----------------------------------------------------------------------------
# Public-facing URL of the application
# Railway: Set this to your custom domain or Railway domain
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment mode (development/production)
# Railway: Automatically set to "production"
NODE_ENV=development

# -----------------------------------------------------------------------------
# CACHING (OPTIONAL)
# -----------------------------------------------------------------------------
# Redis Cache (optional - improves performance)
REDIS_URL=redis://localhost:6379
ENABLE_REDIS=false

# -----------------------------------------------------------------------------
# IMAGE UPLOAD (OPTIONAL)
# -----------------------------------------------------------------------------
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp,image/avif

# Cloudinary (recommended for production image uploads)
# If set, uploads will go to Cloudinary instead of local disk storage.
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_FOLDER=tours

# -----------------------------------------------------------------------------
# RATE LIMITING (OPTIONAL)
# -----------------------------------------------------------------------------
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# -----------------------------------------------------------------------------
# FEATURE FLAGS (OPTIONAL)
# -----------------------------------------------------------------------------
ENABLE_CACHING=true
ENABLE_IMAGE_OPTIMIZATION=true

# -----------------------------------------------------------------------------
# EXTERNAL APIS (OPTIONAL)
# -----------------------------------------------------------------------------
# Currency Exchange API (falls back to fixed rate if not set)
EXCHANGE_RATE_API_KEY=

# -----------------------------------------------------------------------------
# RAILWAY-SPECIFIC (AUTO-PROVIDED)
# -----------------------------------------------------------------------------
# These are automatically provided by Railway:
# - PORT: The port Railway expects the app to listen on
# - RAILWAY_PUBLIC_DOMAIN: Your app's public domain on Railway
# - RAILWAY_ENVIRONMENT: The environment name
# Do NOT set these manually in Railway.
